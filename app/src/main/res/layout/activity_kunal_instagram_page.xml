<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/kulogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:shapeAppearanceOverlay="@style/roundImageicon"

                android:background="@drawable/im15"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="211dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Kunal_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="zindagi.gulzar.h"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/music" />

                <TextView
                    android:id="@+id/kunal_music"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_height="20dp"
                    android:text="Lata Mangeshkar, Udit Narayan, Gurd." />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="92dp"
            android:layout_marginTop="6dp"
            android:id="@+id/kunal_follow"
            android:layout_height="36dp"
            android:textColor="@color/white"
            android:background="@drawable/shap"
            android:text="Follow" />

        <ImageButton
            android:layout_width="21dp"
            android:id="@+id/kunal_sandwich"
            android:layout_marginTop="7dp"
            android:layout_height="36dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/thrredot" />

    </LinearLayout>

    <ImageView
        android:layout_width="400dp"
        android:id="@+id/kunal_reel_image"
        android:layout_height="399dp"
        android:background="@drawable/imag18"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="41dp">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_marginLeft="5dp"
            android:layout_height="40dp">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/kunal_likebutton"
                android:background="@drawable/pngemtyheart" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/kunal_commetbutton"
                android:layout_weight="1"
                android:background="@drawable/pngcomment" />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/kunal_sharebutton"
                android:background="@drawable/pngshare" />

        </LinearLayout>


        <ImageButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/kunal_savebutton"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/save" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/kunal_like_count"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:text="85,004"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="likes"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        android:id="@+id/kunal_commet_show_text"
        android:text="zindagi.gulzar.h "
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"
            android:text="View all" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/kunal_commet_count"
            android:text="1,317"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="comments"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/kunal_image_days"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"
            android:text="2" />
        <TextView
            android:layout_width="wrap_content"
            android:text="days ago "
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="'  See translation"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>