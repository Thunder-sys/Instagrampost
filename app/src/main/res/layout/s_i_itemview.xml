<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical" >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLength="30"
                android:text="zindagi.guljar.h" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Lata mangeshkar,Udit Narayan,Gurd....." />

        </LinearLayout>
        
        <ImageButton
            android:id="@+id/follow"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="Follow"
            android:background="@drawable/follow"/>
        <ImageButton
            android:id="@+id/dots"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:text="Follow"
            android:background="@drawable/thrredot"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/instaimage"
        android:layout_width="match_parent"
        android:layout_height="411dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/morpankh" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="40dp">

            <ImageButton
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/pngemtyheart" />

            <ImageButton
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/pngcomment" />

            <ImageButton
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/pngshare"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="200dp"
            android:layout_weight="1"
            android:background="@drawable/pngshare"/>








    </LinearLayout>



</LinearLayout>